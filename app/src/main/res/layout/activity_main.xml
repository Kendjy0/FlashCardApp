<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Tell me about your hobby"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/flashcard_reponse"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/flashcard_question"
        android:textSize="35dp"
        android:text="It's working online in freelance"
        android:gravity="center"
        />

    <Button
        android:id="@+id/button_add"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text="Button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/buttonadd"
        />

</RelativeLayout>